<%= form_for([@image, @identification]) do |f| %>
  <%= hidden_field_tag :image_id, @image.id %>
  <div class="field">
    <%= f.label :suborder %><br />
    <%= f.collection_select :suborder, Animal.select('DISTINCT(suborder)').order(:suborder), :suborder, :suborder, class: "dropdown-menu", include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :family %><br />
    <%= f.collection_select :family, [], :family, :family, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :common_name %><br />
    <%= f.collection_select :common_name, [], :id, :common_name, include_blank: true %>
  </div>
  <div class="actions" id="actions">
    <%= f.submit "identify!", class: "btn btn-default", id: "identify_button" %>
  </div>
<% end %>
