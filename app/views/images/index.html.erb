<h1>Listing images</h1>

<table>
  <tr>
    <th>Date time</th>
    <th>Image</th>
    <th>Lat</th>
    <th>Long</th>
    <th>Species</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.date_time %></td>
    <td><%= image_tag image.image_url(:thumb).to_s %></td>
    <td><%= image.lat %></td>
    <td><%= image.long %></td>
    <td><%= image.species %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

